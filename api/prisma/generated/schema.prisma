generator client {
  provider     = "prisma-client-js"
  output       = "./generated"
  moduleFormat = "cjs"
  engineType   = "library"
}

datasource db {
  provider = "postgresql"
}

model products {
  id          Int       @id @default(autoincrement())
  title       String    @db.VarChar(255)
  price       Decimal   @db.Decimal(10, 2)
  image_url   String?
  owner_email String?   @db.VarChar(255)
  created_at  DateTime? @default(now()) @db.Timestamp(6)
  users       users?    @relation(fields: [owner_email], references: [email], onDelete: Cascade, onUpdate: NoAction)
}

model users {
  id       Int        @id @default(autoincrement())
  email    String     @unique @db.VarChar(255)
  password String
  products products[]
}
